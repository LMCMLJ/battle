
<body>
  <div class="left">

    <h1><%= @p1_name %></h1>
    <div class="img"><div class="dragon"><img src="http://i.imgur.com/dmsJvpc.png" alt="dragon" height="300" width="300">
    </div>
    </div>
    <h4>HP: <%= session[:p1_hp]%></h4>
  </div>
  <div class="center">
    <h2>Prepare to fight!</h2>
    <form action="/attack" method=post>
      <input type="submit" value="Attack!">
    </form>
  </div>
  <div class="right">
    <h1><%= @p2_name %> </h1>
    <div class="img"><div id="hydra"><img src="http://i.imgur.com/yAMeJcI.png" height="300" width="300">
    </div>
    </div>
    <h4>HP: <%= session[:p2_hp]%></h4>
  </div>
</body>


